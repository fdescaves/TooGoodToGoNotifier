{
  "ApiOptions": {
    "BaseUrl": "https://apptoogoodtogo.com/api",
    "AuthenticateEndpoint": "/auth/v1/loginByEmail",
    "GetItemsEndpoint": "/item/v7/"
  },
  "AuthenticationOptions": {
    "Email": "",
    "Password": ""
  },
  "SchedulerOptions": {
    "Interval": 5
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug"
    }
  },
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "file-log": {
        "type": "File",
        "layout": "${longdate} |${level}| ${message} | ${exception:format=tostring}",
        "fileName": "H:/TooGoodToGoNotifier.log"
      },
      "console-log": {
        "type": "ColoredConsole",
        "layout": "${longdate} |${level}| ${message} | ${exception:format=tostring}"
      },
      "email-log": {
        "type": "Mail",
        "subject": "An error occured",
        "from": "",
        "to": "",
        "body": "${longdate} | ${exception:format=tostring}",
        "smtpServer": "smtp.gmail.com",
        "smtpPort": "587",
        "enableSsl": "true",
        "smtpAuthentication": "Basic",
        "smtpUserName": "",
        "smtpPassword": ""
      }
    },
    "rules": [
      {
        "enabled": true,
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "console-log"
      },
      {
        "enabled": false,
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "file-log"
      },
      {
        "enabled": false,
        "logger": "*",
        "minLevel": "Error",
        "writeTo": "email-log"
      }
    ]
  }
}

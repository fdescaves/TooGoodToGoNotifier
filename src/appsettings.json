{
  "TooGoodToGoApiOptions": {
    "BaseUrl": "https://apptoogoodtogo.com/api",
    "AuthenticateByEmailEndpoint": "/auth/v3/authByEmail",
    "RefreshTokenEndpoint": "/auth/v3/token/refresh",
    "AuthenticateByRequestPollingIdEndpoint": "/auth/v3/authByRequestPollingId",
    "GetItemsEndpoint": "/item/v7/",
    "RefreshTokenInterval": 12,
    "AccountEmail": ""
  },
  "NotifierOptions": {
    "Interval": 10,
    "StartTime": "07:00:00",
    "EndTime": "20:00:00",
    "Recipients": []
  },
  "EmailServiceOptions": {
    "SmtpServer": "",
    "SmtpPort": 465,
    "useSsl": true,
    "SmtpUserName": "",
    "SmtpPassword": ""
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    }
  },
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "file-log": {
        "type": "File",
        "layout": "${longdate} |${level}| ${message} | ${exception:format=tostring}",
        "fileName": ""
      },
      "console-log": {
        "type": "ColoredConsole",
        "layout": "${longdate} |${level}| ${message} | ${exception:format=tostring}"
      },
      "email-log": {
        "type": "Mail",
        "subject": "An error occured",
        "from": "",
        "to": "",
        "body": "${longdate} | ${exception:format=tostring}",
        "smtpServer": "",
        "smtpPort": 587,
        "enableSsl": true,
        "smtpAuthentication": "Basic",
        "smtpUserName": "",
        "smtpPassword": ""
      }
    },
    "rules": [
      {
        "enabled": true,
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "console-log"
      },
      {
        "enabled": true,
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "file-log"
      },
      {
        "enabled": true,
        "logger": "*",
        "minLevel": "Error",
        "writeTo": "email-log"
      }
    ]
  }
}

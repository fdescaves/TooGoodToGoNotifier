{
  "ApiOptions": {
    "BaseUrl": "https://apptoogoodtogo.com/api",
    "AuthenticateEndpoint": "/auth/v1/loginByEmail",
    "GetItemsEndpoint": "/item/v7/"
  },
  "AuthenticationOptions": {
    "Email": "",
    "Password": ""
  },
  "TimerOptions": {
    "Interval": 5000
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug"
    }
  },
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "file-log": {
        "type": "File",
        "layout": "${longdate} |${level}| ${message} | ${exception:format=tostring}",
        "fileName": "H:/TooGoodToGoNotifier.log"
      },
      "console-log": {
        "type": "ColoredConsole",
        "layout": "${longdate} |${level}| ${message} | ${exception:format=tostring}"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "console-log"
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "file-log"
      }
    ]
  }
}
